<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content border border-primary border-4 bg-light-subtle rounded-3">
            <div class="modal-header bg-primary text-white rounded-top-1">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Thêm sản phẩm</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="addNewPr" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="exampleInputName" class="form-label">Tên sản phẩm:</label>
                        <input type="text" name="namePr" class="form-control" id="exampleInputName" required>
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPrice" class="form-label">Giá</label>
                        <input type="number" name="pricePr" class="form-control" id="exampleInputPrice" required>
                    </div>
                    <div class="mb-3">
                        <label for="formFile" class="form-label">Ảnh sản phẩm</label>
                        <input class="form-control" name="imgRes" type="file" id="formFile" accept="image/*" required>
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputColor" class="form-label">Màu sắc</label>
                        <input type="text" name="clPr" class="form-control" id="exampleInputColor">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputType" class="form-label">Loại sản phẩm</label>
                        <input type="text" name="tPr" class="form-control" id="exampleInputType">
                    </div>
                    <div class="input-group mb-3">
                        <label class="input-group-text" for="users">Khách hàng:</label>
                        <select name="idUser" class="form-select" id="users">
                            {{#each listusers}}
                            <option value="{{_id}}">{{name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-primary">Xác nhận</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>