    <div class="row bg-primary-subtle p-3 text-center rounded shadow m-3">
        <h1 class="fw-bolder">Danh sách sản phẩm</h1>
    </div>
    <button type="button" class="bg-success bg-gradient border-0 mt-3 mb-3 p-2 rounded text-light"
        data-bs-toggle="modal" data-bs-target="#staticBackdrop">
        Thêm sản phẩm
    </button>
    <div class="row">
        <div class="col-12">
            <table class="table table-bordered border-light-subtle shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Tên sản phẩm</th>
                        <th scope="col">Đơn giá</th>
                        <th scope="col">Hình ảnh</th>
                        <th scope="col">Màu sắc</th>
                        <th scope="col">Loại sản phẩm</th>
                        <th scope="col">Khách hàng</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each listproducts}}
                    <tr>
                        <th scope="row">{{@index}}</th>
                        <td>{{namePr}}</td>
                        <td>{{price}}</td>
                        <td class="col text-center">
                            <div class="col">
                                <img src="uploads/{{imgPr}}" class="mb-1 rounded-2 border border-2 border-dark-subtle"
                                    width="70" height="70" alt="">
                            </div>
                            <div class="col">
                                <button type="button" class="btn btn-outline-secondary text-center"
                                    style="height: 35px;width: 40px" data-bs-toggle="modal"
                                    data-bs-target="#change{{_id}}">
                                    <ion-icon name="camera" style="height: 15px;width: 15px;"></ion-icon>
                                </button>
                                <div class="modal fade" id="change{{_id}}" tabindex="-1"
                                    aria-labelledby="exampleModalLabel1" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h1 class="modal-title fs-5" id="exampleModalLabel1">Thay ảnh sản phẩm
                                                </h1>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <form method="post" action="changeImgProducts"
                                                    enctype="multipart/form-data">

                                                    <div class="mb-3">
                                                        <label for="formFile" class="form-label">Sản phẩm:
                                                            {{namePr}}</label>
                                                        <input class="form-control" name="imgRes" type="file"
                                                            id="formFilene" accept="image/*" required>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary"
                                                            data-bs-dismiss="modal">Hủy</button>
                                                        <button id="changeimage" name="prNum" value="{{_id}}"
                                                            class="btn btn-primary" type="submit">Đồng
                                                            ý</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>{{color}}</td>
                        <td>{{typePr}}</td>
                        <td>{{nameUser}}</td>
                        <td class="col-1">
                            {{!-- button update --}}
                            <button type="button" class="btn btn-outline-warning" data-bs-toggle="modal"
                                data-bs-target="#staticBackdrop{{_id}}">
                                <ion-icon name="create-outline"></ion-icon>
                            </button>
                            <div class="modal fade" id="staticBackdrop{{_id}}" data-bs-backdrop="static"
                                data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel"
                                aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content border border-primary border-4 bg-light-subtle rounded-3">
                                        <div class="modal-header bg-primary text-white rounded-top-1">
                                            <h1 class="modal-title fs-5" id="staticBackdropLabel">Sửa sản phẩm</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <form action="updatePr" method="post">
                                                <div class="mb-3">
                                                    <label for="exampleInputName" class="form-label">Tên sản
                                                        phẩm:</label>
                                                    <input type="text" name="namePr" class="form-control"
                                                        id="exampleInputName" value="{{namePr}}" required>
                                                </div>
                                                <div class="mb-3">
                                                    <label for="exampleInputPrice" class="form-label">Giá</label>
                                                    <input type="number" name="pricePr" class="form-control"
                                                        id="exampleInputPrice" value="{{price}}" required>
                                                </div>
                                                <div class="mb-3">
                                                    <label for="exampleInputColor" class="form-label">Màu sắc</label>
                                                    <input type="text" name="clPr" class="form-control"
                                                        id="exampleInputColor" value="{{color}}">
                                                </div>
                                                <div class="mb-3">
                                                    <label for="exampleInputType" class="form-label">Loại sản
                                                        phẩm</label>
                                                    <input type="text" name="tPr" class="form-control"
                                                        id="exampleInputType" value="{{typePr}}">
                                                </div>

                                                <div class="input-group mb-3">
                                                    <label class="input-group-text" for="usersUp">Khách hàng:</label>
                                                    <select name="usersUp" class="form-select" id="usersUp">
                                                        {{#each ../listusers}}
                                                        <option value="{{_id}}">{{name}}</option>
                                                        {{/each}}
                                                    </select>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-bs-dismiss="modal">Hủy</button>
                                                    <button name="idUpPr" value="{{_id}}" type="submit"
                                                        class="btn btn-primary">Xác nhận</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            {{!-- button delete --}}
                            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal"
                                data-bs-target="#exampleModal{{_id}}">
                                <ion-icon name="trash-outline"></ion-icon>
                            </button>
                            <div class="modal fade" id="exampleModal{{_id}}" tabindex="-1"
                                aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="exampleModalLabel">Xóa sản phẩm</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            Bạn có chắc chắn muốn xóa không?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Hủy</button>
                                            <form method="get" action="deletePr">
                                                <button name="prNum" value={{_id}} class="btn btn-primary"
                                                    type="submit">Đồng
                                                    ý</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
