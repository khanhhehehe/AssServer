{{#if wrong}}
<div id="w" class="alert alert-success position-absolute top-0 start-50 translate-middle-x" role="alert">
    {{textalert}}
</div>
{{else}}
<div id="w" class="alert alert-danger position-absolute top-0 start-50 translate-middle-x" style="display: {{styless}};" role="alert">
    {{textalert}}
</div>
{{/if}}
<ul class="navbar-right bg-danger bg-gradient navbar-nav me-auto ps-1 pe-1 mb-lg-0 rounded-4 d-none d-lg-block mt-1"
    style="position: absolute;right: 5px">
    <li class="nav-item">
        <a class="nav-link text-light" href="Login.html">Đăng xuất</a>
    </li>
</ul>
<section class="vh-100" style="background-color: #dce7ff;height: 100%">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-lg-6 mb-4 mb-lg-0">
                <div class="card mb-3 shadow-lg" style="border-radius: .5rem;">
                    <div class="row g-0">
                        <div class="col-md-4 gradient-custom text-center text-white"
                            style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                            <button type="button" class="position-relative  my-5" style="background: none;border:none"
                                data-bs-toggle="modal" data-bs-target="#exampleChange">
                                <img src="uploads/{{thisUser.image}}" alt="Avatar" class="img-fluid rounded-4"
                                    style="width: 80px;" /> <span
                                    class="position-absolute top-0 start-100 translate-middle badge rounded-pill"><ion-icon
                                        name="camera" class="btn btn-secondary rounded-circle"></ion-icon>
                                    <span class="visually-hidden"></span></span>
                            </button>
                            <h4>Xin chào!</h4>
                            <hr>
                            <h5>{{thisUser.name}}</h5>
                            <ion-icon data-bs-toggle="modal" data-bs-target="#staticBackdrop"
                                name="create-outline"></ion-icon>
                            <hr>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body p-4">
                                <h6>Thông tin cá nhân</h6>
                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <h6>Email</h6>
                                        <p class="text-muted">{{thisUser.email}}</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <div class="d-flex flex-row mb-3">
                                            <h6 class="col-7">Mã của bạn:</h6>
                                            <ion-icon id="eyes" class="col-2" name="eye-off-outline"
                                                onclick="hide()"></ion-icon>
                                        </div>
                                        <p class="text-muted" aria-valuetext="" id="yourId"></p>
                                        <input id="uId" class="d-none" value="{{thisUser._id}}">
                                    </div>
                                </div>
                                <h6>Hoạt động</h6>
                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <h6>Gần đây</h6>
                                        <p class="text-muted">Chưa cập nhật</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6>Quan tâm nhiều nhất</h6>
                                        <p class="text-muted">Chưa cập nhật</p>
                                    </div>
                                </div>
                                <div class="d-flex flex-row-reverse">
                                    <button
                                        style="text-align: right;color:rgb(92, 202, 249);text-decoration: underline;background:none;border:none"
                                        data-bs-toggle="modal" data-bs-target="#example">Đổi
                                        mật khẩu</button>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Modal title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="updateProfile" method="post">
                    <div class="form-outline">
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">Email</label>
                            <input value="{{thisUser.email}}" name="email" type="email" class="form-control"
                                id="exampleInputPassword1" required>
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword2" class="form-label">Họ và tên</label>
                            <input value="{{thisUser.name}}" name="name" type="text" class="form-control"
                                id="exampleInputPassword2" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button name="idUserUp" value="{{thisUser._id}}" type="submit" class="btn btn-primary">Xác
                            nhận</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{{!-- change password --}}
<div class="modal fade" id="example" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="updatePass" method="post">
                    <div class="form-outline">
                        <div class="mb-3">
                            <label for="example1" class="form-label">Mật khẩu cũ</label>
                            <input name="oldpass" type="password" class="form-control" id="example1" required>
                        </div>
                        <div class="mb-3">
                            <label for="example2" class="form-label">Mật khẩu mới</label>
                            <input name="newpass" type="password" class="form-control" id="example2" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button name="idUserUp" value="{{thisUser._id}}" type="submit" class="btn btn-primary">Xác
                            nhận</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{!-- change image --}}
<div class="modal fade" id="exampleChange" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Xóa nhân viên</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" action="changeImguser" enctype="multipart/form-data">

                    <div class="mb-3">
                        <label for="formFile" class="form-label">Người dùng:
                            {{thisUser.name}}</label>
                        <input class="form-control" name="imgRes" type="file" id="formFilene" accept="image/*" required>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button name="userNum" value="{{thisUser._id}}" class="btn btn-primary" type="submit">Đồng
                            ý</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    let chk = false
    let iduser = ''
    let showId = document.getElementById('yourId')
    let valueId = document.getElementById('uId').value
    let eyes = document.getElementById('eyes')
    function hide() {
        if (chk) {
            iduser = ''
            eyes.name = 'eye-off-outline'
        } else {
            iduser = valueId
            eyes.name = 'eye-outline'
        }
        chk = !chk
        showId.innerHTML = iduser
    }
    window.setTimeout(function () {
        let alertShow = document.getElementById('w')
        alertShow.style.display = 'none'
    }, 5000)


</script>